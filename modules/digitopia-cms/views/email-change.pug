extends ../../../views/wrapper

block content
	.reg-form-container.centered
		h2
			i.material-icons mail_outline
			|  Change Email Address
		
		form.form.form-validation(action="/api/users/email-change" method="PATCH" data-sargasso-class="formValidator,formController" data-submitter="#submitter")
			input(type="hidden" name="_csrf" value= csrfToken)
			.reg-form.clear-fix.mdc-elevation--z1
				section.form-group
					.mdc-text-field.mdc-text-field--with-trailing-icon
						input.mdc-text-field__input(name="email" data-validate= validators.email data-unique-endpoint="/api/users/is-unique-email")
						label.mdc-floating-label New Email Address
						.input-ok-indicator.material-icons.mdc-text-field__icon check_circle
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.validation-help.mdc-text-field-helper-text--persistent
				section.form-group
					.mdc-text-field.mdc-text-field--with-trailing-icon
						input.mdc-text-field__input(name="confirm-email" data-validate= validators.email data-match="input[name='email']")
						label.mdc-floating-label Confirm New Email Address
						.input-ok-indicator.material-icons.mdc-text-field__icon check_circle
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.validation-help.mdc-text-field-helper-text--persistent
				section.form-group.pull-right.button-bar
					a.mdc-button(href="/users/settings") Cancel
					button#submitter.mdc-button.mdc-button--raised(disabled) Save
			
				.ajax-errors
					
			p.mdc-typography--caption After you click "save" we will send a message to your new email address. Follow the link in the email to complete this process.
