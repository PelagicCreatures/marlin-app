extends ../../../views/wrapper

block content
	.page-header
		h2 
			a(href="/users/settings")
				i.material-icons arrow_back_ios
				
			i.material-icons lock
			= ' access history'

	.page-content
		.flextable(data-jsclass="flexTable" data-break="screen-xsmall,screen-small")
			ul
				li Created
				li Last Access
				li Last Login IP Address
				li Currrent
				li 
			ul
				for token in tokens
					li= token.createdAt
						ul
							li= token.lastaccess
							li= token.ip
							li!= currentToken === token.token ? '<i class="material-icons">check</i>' : ''
							li
								if currentToken !== token.token
									a(href="#" data-responsive-class="ajaxButton" data-confirm="#confirm-dialog" data-confirm-prompt="Delete login?" data-endpoint='/api/users/token-delete?token='+token.id data-method="DELETE" data-no-hijax="true" data-redirect="/users/tokens")
										<i class="material-icons">delete</i>
