extends ../../../views/wrapper

block content
	.reg-form-container.centered
		h2
			i.material-icons lock
			|  Change Password
				
		form.form.form-validation(action="/api/users/password-change" method="PATCH" data-responsive-class="formValidator,formController" data-submitter="#submitter")
			input(type="hidden" name="_csrf" value= csrfToken)

			.reg-form.clear-fix.mdc-elevation--z1
				
				section.form-group
					.mdc-text-field.mdc-text-field--with-trailing-icon
						input.mdc-text-field__input(type="password" name="oldpassword" data-validate= {isPassword:true} data-min-length="8")
						label.mdc-floating-label Old Password
						.input-ok-indicator.material-icons.mdc-text-field__icon check_circle
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.validation-help.mdc-text-field-helper-text--persistent

				section.form-group
					.mdc-text-field.mdc-text-field--with-trailing-icon
						input.mdc-text-field__input(type="password" name="password" data-validate= {isPassword:true} data-min-length="8")
						label.mdc-floating-label New Password
						.input-ok-indicator.material-icons.mdc-text-field__icon check_circle
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.validation-help.mdc-text-field-helper-text--persistent
						
				section.form-group
					.mdc-text-field.mdc-text-field--with-trailing-icon
						input.mdc-text-field__input(type="password" name="confirm-password" data-validate= {isPassword:true} data-match="input[name='password']" placeholder="confirm password")
						label.mdc-floating-label Confirm New Password
						.input-ok-indicator.material-icons.mdc-text-field__icon check_circle
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.validation-help.mdc-text-field-helper-text--persistent
					
				section.form-group.pull-right.button-bar
					a.mdc-button(href="/users/settings") Cancel
					button#submitter.mdc-button.mdc-button--raised(disabled) Save New Password
					
				.ajax-errors
