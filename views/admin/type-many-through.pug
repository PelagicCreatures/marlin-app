.mdc-chip-set.mdc-chip-set--filter
	input(type="hidden" name= name value= selectedRows.join(',') data-validate={})

	for rel in related
		.mdc-chip(data-id= rel.id class= selectedRows.indexOf(parseInt(rel.id)) !== -1 ? 'mdc-chip--selected': '')
			.mdc-chip__ripple
			span.mdc-chip__checkmark
				<svg class="mdc-chip__checkmark-svg" viewBox="-2 -3 30 30">
					<path class="mdc-chip__checkmark-path" fill="none" stroke="black" d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
			span.mdc-chip__text= rel.description
