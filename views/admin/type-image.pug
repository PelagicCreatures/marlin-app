.form-group
	.uploadable-preview(data-name=columnName + '-preview')
		if thumb
			!= thumb
	.uploadable-form
		p.metadata
			if metadata
				| type: <strong>#{metadata.type}</strong> w: <strong>#{metadata.width}</strong> h: <strong>#{metadata.height}</strong>
			
		input(type="hidden" data-name= columnName name= name value= value)
		input(type="hidden" data-name= columnName + '-upload' name= uploadName)
		input(type="hidden" data-name=columnName + '-width' name= widthName)
		input(type="hidden" data-name=columnName + '-height' name= heightName)
		input.uploadable-input(data-column-name= columnName data-jsclass="uploadableImage" data-target='[data-name=' + columnName + '-upload]' data-send-resized=(options.sendResized ? 'true': 'false') data-max-width=options.maxWidth data-max-height=options.maxHeight type="file" name= name + '-uploadable' accept= options.accepts)
		.input-ok-indicator.material-icons check_circle
		.validation-help
