extends wrapper

block content
	.row
		.col-sm-1
		.col-sm-10.content-area
			.page-header
				h1 User Login 
				
			form.form(action="/api/users/login" method="POST" data-jsclass="formValidator,loginForm" data-submitter="#submitter")
				
				.form-group
					label Email Address
					input.form-control(name="email" data-validate="required,email")
					.validation-help
						
				.form-group
					label Password
					input.form-control(type="password" name="password" data-validate="required,password" data-min-length="8")
					.validation-help
			
				.form-group
					button#submitter.btn.btn-primary  Login
					
				.ajax-errors
					
				p
					a(href="/users/password-reset") Forgot Password
					
				p
					a(href="/users/register") Don't have an account
					
		.col-sm-1
