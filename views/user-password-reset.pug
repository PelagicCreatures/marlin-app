extends wrapper

block content
	.row
		.col-sm-1
		.col-sm-10.content-area
			.page-header
				h1 Password Reset
				
			form.form(action="/api/users/password-reset" method="POST" data-jsclass="formValidator,regForm" data-submitter="#submitter")
				
				.form-group
					label Email Address
					input.form-control(name="email" data-validate="required,email")
					.validation-help
			
				.form-group
					button#submitter.btn.btn-primary Save
					
				.ajax-errors
					
		.col-sm-1
